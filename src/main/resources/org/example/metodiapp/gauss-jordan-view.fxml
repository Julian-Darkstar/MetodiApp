<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<BorderPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.metodiapp.controllers.GaussJordanController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label styleClass="h3" text="Método de Eliminación de Gauss-Jordan" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Filas (m):" />
                        <TextField fx:id="filasTextField" prefWidth="60" />
                        <Label text="Columnas (n):" />
                        <TextField fx:id="columnasTextField" prefWidth="60" />
                        <Button fx:id="crearMatrizButton" onAction="#crearMatriz" text="Crear Matriz" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" prefHeight="200.0">
            <content>
                <GridPane fx:id="matrizGridPane" hgap="5" vgap="5">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="resolverButton" onAction="#resolverMatriz" text="Resolver" styleClass="button-primary"/>
                        <Button fx:id="reiniciarButton" onAction="#reiniciar" text="Reiniciar" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="volverButton" onAction="#volver" text="Volver" />
                    </children>
                </HBox>
                <Label text="Proceso y Resultados:" />
                <TextArea fx:id="resultadoTextArea" editable="false" prefHeight="250.0" wrapText="false" />
            </children>
        </VBox>
    </bottom>
</BorderPane>
