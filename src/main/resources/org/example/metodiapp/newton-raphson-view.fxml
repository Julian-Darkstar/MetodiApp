<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.metodiapp.controllers.NewtonRaphsonController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label styleClass="h3" text="Método de Newton-Raphson" />
                <Label text="Instrucciones: Ingrese la función, un valor inicial cercano a la raíz y el error porcentual permitido." wrapText="true" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Función f(x):" />
                <TextField fx:id="funcionTextField" promptText="Ej: exp(-x) - x" />
                <HBox spacing="10.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Valor Inicial (x₀):" />
                                <TextField fx:id="valorInicialTextField" promptText="Ej: 0" />
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Error Porcentual Permitido (%):" />
                                <TextField fx:id="errorTextField" promptText="Ej: 0.5" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="calcularButton" mnemonicParsing="false" onAction="#calcular" text="Calcular Raíz" styleClass="button-primary" />
                <Label text="Resultados de Iteraciones:" />
                <TableView fx:id="tablaResultados" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colIteracion" prefWidth="50.0" text="Iter" />
                        <TableColumn fx:id="colXi" prefWidth="120.0" text="xi" />
                        <TableColumn fx:id="colFxi" prefWidth="120.0" text="f(xi)" />
                        <TableColumn fx:id="colDfxi" prefWidth="120.0" text="f'(xi)" />
                        <TableColumn fx:id="colXi1" prefWidth="120.0" text="xi+1" />
                        <TableColumn fx:id="colError" prefWidth="120.0" text="Error (%)" />
                    </columns>
                </TableView>
                <Label fx:id="raizLabel" styleClass="h3" text="Raíz: " />
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <children>
                <Button fx:id="reiniciarButton" onAction="#reiniciar" text="Reiniciar" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="volverButton" mnemonicParsing="false" onAction="#volver" text="Volver" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
