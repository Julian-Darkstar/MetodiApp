<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.metodiapp.controllers.JacobiController">

    <!-- ======== CABECERA ======== -->
    <top>
        <VBox>
            <padding>
            <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="h3" text="Método de Jacobi" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="ayudaButton" text="Ayuda" onAction="#mostrarAyuda" />
                    </children>
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Número de variables:" />
                                <TextField fx:id="numVariablesField" promptText="Ej: 3" prefWidth="80" />
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Error permitido (ε):" />
                                <TextField fx:id="errorPermitidoField" promptText="Ej: 0.0001" prefWidth="100" />
                            </children>
                        </VBox>

                        <Button fx:id="generarButton" text="Generar ecuaciones" onAction="#generarEcuaciones" />
                        <Button fx:id="calcularButton" text="Calcular" onAction="#calcularJacobi" styleClass="button-primary" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- ======== CENTRO ======== -->
    <center>
        <VBox VBox.vgrow="ALWAYS" spacing="10">
            <padding>
                <Insets left="10.0" right="10.0" top="10" bottom="10" />
            </padding>
            <children>

                <Label text="Ingrese los coeficientes del sistema:" style="-fx-font-weight: bold;" />
                <VBox fx:id="ecuacionesBox" spacing="5" style="-fx-border-color: #444; -fx-padding: 10;" />

                <Separator />

                <Label text="Ecuaciones despejadas automáticamente:" style="-fx-font-weight: bold;" />
                <VBox fx:id="despejadasBox" spacing="5" style="-fx-border-color: #444; -fx-padding: 10;" />

            </children>
        </VBox>
    </center>

    <!-- ======== PIE ======== -->
    <bottom>
        <VBox >
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <Label text="Iteraciones:" style="-fx-font-weight: bold;" />

                <TableView fx:id="tablaJacobi" prefHeight="200.0" />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Solución final:" style="-fx-font-weight: bold;" />
                        <Label fx:id="resultadoLabel" text="Aún no calculado" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="volverButton" text="Volver" onAction="#volver" />
                        <Button fx:id="reiniciarButton" text="Reiniciar" onAction="#reiniciarPantalla" styleClass="button-secondary"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
