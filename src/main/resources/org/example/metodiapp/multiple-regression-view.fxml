<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.metodiapp.controllers.MultipleRegressionController">

    <top>
        <VBox>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="h3" text="Regresión Múltiple" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="ayudaButton" text="Ayuda" onAction="#mostrarAyuda" />
                    </children>
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Número de observaciones:" />
                                <TextField fx:id="numObservationsField" promptText="Ej: 5" prefWidth="150" />
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Número de variables:" />
                                <TextField fx:id="numVariablesField" promptText="Ej: 2" prefWidth="150" />
                            </children>
                        </VBox>

                        <Button text="Generar Campos" onAction="#generateFields" />
                        <Button text="Calcular" onAction="#calculateRegression" styleClass="button-primary" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <padding>
                <Insets left="10.0" right="10.0" top="10" bottom="10" />
            </padding>
            <VBox spacing="10">
                <Label text="Variables Independientes (X):" style="-fx-font-weight: bold;" />
                <GridPane fx:id="xGrid" hgap="5" vgap="5" />
            </VBox>
            <VBox spacing="10">
                <Label text="Variables Dependientes (Y):" style="-fx-font-weight: bold;" />
                <VBox fx:id="yVBox" spacing="5" />
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox>
            <padding>
                <Insets left="10.0" right="10.0" bottom="10.0" />
            </padding>
            <children>
                <Label text="Coeficientes:" style="-fx-font-weight: bold;" />
                <Label fx:id="coefficientsLabel" text="Aún no calculado" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="volverButton" text="Volver" onAction="#volver" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
